    <h1>>> SIMULADOR_MEMORIA <<</h1>
    <div class="subtitle">INSERTE MONEDA // SELECCIONE ALGORITMO</div>

    <div class="container">
        <div class="controls">
            <div class="input-group">
                <label>[1] CONFIGURAR BLOQUES</label>
                <input type="number" id="blockSize" placeholder="TAMAÑO (KB)">
                <button class="btn-add" onclick="addBlock()">[+] INSERTAR BLOQUE</button>
                <button class="btn-reset" onclick="resetBlocks()">[X] BORRAR MEMORIA</button>
            </div>

            <div class="input-group">
                <label>[2] COLA DE PROCESOS</label>
                <input type="number" id="processSize" placeholder="TAMAÑO (KB)">
                <button class="btn-add" onclick="addProcess()" style="background-color: var(--accent-magenta); border-color:var(--accent-magenta);">[+] INSERTAR PROCESO</button>
                <button class="btn-reset" onclick="resetProcesses()">[X] BORRAR COLA</button>
            </div>

            <div class="input-group" style="border: none; padding-bottom:0;">
                <label>[3] EJECUTAR</label>
                <button class="btn-run" onclick="runSimulation('best')">INICIAR P1 (BEST FIT)</button>
                <button class="btn-run" onclick="runSimulation('worst')" style="margin-top:10px;">INICIAR P2 (WORST FIT)</button>
                <button class="btn-reset" onclick="fullReset()" style="margin-top:20px; border: 4px dotted var(--warning);">!! REINICIO TOTAL !!</button>
            </div>
        </div>

        <div class="visualization">
            
            <div class="legend">
                <div class="legend-item"><div class="box" style="background: #000; border-color: var(--primary);"></div> LIBRE</div>
                <div class="legend-item"><div class="box" style="background: var(--accent-cyan); border-color: var(--accent-cyan);"></div> ASIGNADO</div>
                <div class="legend-item"><div class="box" style="background: var(--warning); border-color: var(--warning);"></div> FRAG (BASURA)</div>
            </div>

            <div class="section-title">
                MAPA DE MEMORIA
                <span id="algoTitle" style="color: var(--accent-magenta);">LISTO J1</span>
            </div>
            <div class="memory-container" id="memoryContainer">
                <div style="width:100%; text-align:center; font-style:italic;">
                    [ NO HAY CARTUCHOS DE MEMORIA ]
                </div>
            </div>

            <div class="section-title">SIGUIENTES PROCESOS</div>
            <div class="process-queue" id="processQueue">
                </div>

            <div id="results" class="results-panel">
                <h3>>> MISIÓN COMPLETADA <<</h3>
                <div class="stat-row"><span>MODO:</span> <span id="resAlgo" class="stat-val">-</span></div>
                <div class="stat-row"><span>PUNTAJE (ÉXITO):</span> <span id="resAssigned" class="stat-val">0</span></div>
                <div class="stat-row"><span>GAME OVER (FALLOS):</span> <span id="resFailed" class="stat-val" style="color:var(--warning)">0</span></div>
                <div class="stat-row"><span>DESPERDICIO (FRAG):</span> <span id="resFrag" class="stat-val">0</span> KB</div>
                <div class="stat-row"><span>NIVEL EFICIENCIA:</span> <span id="resEff" class="stat-val">0%</span></div>
            </div>
        </div>
    </div>

    <script>
        let memoryBlocks = []; 
        let processQueue = []; 
        let initialBlocks = []; 
        let blockIdCounter = 1;
        let processIdCounter = 1;

        function addBlock() {
            const sizeInput = document.getElementById('blockSize');
            const size = parseInt(sizeInput.value);
            if (!size || size <= 0) return alert("ERROR: TAMAÑO INVÁLIDO");
            const block = { id: blockIdCounter++, size: size, remaining: size, processes: [] };
            memoryBlocks.push(block);
            initialBlocks = JSON.parse(JSON.stringify(memoryBlocks.map(b => ({...b, processes:[], remaining: b.size}))));
            sizeInput.value = '';
            renderMemory();
        }

        function addProcess() {
            const sizeInput = document.getElementById('processSize');
            const size = parseInt(sizeInput.value);
            if (!size || size <= 0) return alert("ERROR: TAMAÑO INVÁLIDO");
            processQueue.push({ id: processIdCounter++, size: size });
            sizeInput.value = '';
            renderQueue();
        }

        function resetBlocks() {
            memoryBlocks = []; initialBlocks = []; blockIdCounter = 1;
            renderMemory(); hideResults();
        }

        function resetProcesses() {
            processQueue = []; processIdCounter = 1;
            renderQueue(); hideResults();
        }

        function fullReset() { resetBlocks(); resetProcesses(); }

        function renderMemory() {
            const container = document.getElementById('memoryContainer');
            container.innerHTML = '';
            if (memoryBlocks.length === 0) {
                container.innerHTML = '<div style="width:100%; text-align:center; font-style:italic;">[ NO HAY CARTUCHOS DE MEMORIA ]</div>';
                return;
            }
            memoryBlocks.forEach(block => {
                const blockDiv = document.createElement('div');
                blockDiv.className = 'memory-block';
                
                const header = document.createElement('div');
                header.className = 'memory-header';
                header.innerText = `BLOQUE_${block.id} [${block.size}K]`;
                blockDiv.appendChild(header);

                const spaceDiv = document.createElement('div');
                spaceDiv.className = 'memory-space';
                let currentHeight = 0;
                
                block.processes.forEach(p => {
                    const pDiv = document.createElement('div');
                    pDiv.className = 'process-allocated';
                    const heightPercent = (p.size / block.size) * 100;
                    pDiv.style.height = `${heightPercent}%`;
                    pDiv.style.bottom = `${currentHeight}%`;
                    pDiv.innerHTML = `P${p.id}<br>${p.size}`;
                    spaceDiv.appendChild(pDiv);
                    currentHeight += heightPercent;
                });

                if (block.remaining > 0 && block.remaining < block.size && block.processes.length > 0) {
                    const fragDiv = document.createElement('div');
                    fragDiv.className = 'fragmentation-indicator';
                    const fragHeight = (block.remaining / block.size) * 100;
                    fragDiv.style.height = `${fragHeight}%`;
                    fragDiv.style.top = '0'; 
                    fragDiv.innerText = `FRAG: ${block.remaining}`;
                    spaceDiv.appendChild(fragDiv);
                }
                blockDiv.appendChild(spaceDiv);
                container.appendChild(blockDiv);
            });
        }

        function renderQueue() {
            const container = document.getElementById('processQueue');
            container.innerHTML = '';
            processQueue.forEach(p => {
                const pDiv = document.createElement('div');
                pDiv.className = 'process-item';
                pDiv.innerHTML = `P${p.id}<span>${p.size}K</span>`;
                container.appendChild(pDiv);
            });
        }

        async function runSimulation(type) {
            if (initialBlocks.length === 0) return alert("INSERTE BLOQUES PRIMERO");
            if (processQueue.length === 0) return alert("COLA DE PROCESOS VACÍA");

            memoryBlocks = JSON.parse(JSON.stringify(initialBlocks));
            renderMemory();

            document.getElementById('algoTitle').innerText = type === 'best' ? "EJECUTANDO: MEJOR AJUSTE..." : "EJECUTANDO: PEOR AJUSTE...";
            
            const queueCopy = [...processQueue];
            let assignedCount = 0;
            let failedCount = 0;

            for (let i = 0; i < queueCopy.length; i++) {
                const process = queueCopy[i];
                let selectedBlockIndex = -1;

                if (type === 'best') {
                    let minSpace = Infinity;
                    memoryBlocks.forEach((block, index) => {
                        if (block.remaining >= process.size) {
                            if (block.remaining < minSpace) {
                                minSpace = block.remaining;
                                selectedBlockIndex = index;
                            }
                        }
                    });
                } else {
                    let maxSpace = -1;
                    memoryBlocks.forEach((block, index) => {
                        if (block.remaining >= process.size) {
                            if (block.remaining > maxSpace) {
                                maxSpace = block.remaining;
                                selectedBlockIndex = index;
                            }
                        }
                    });
                }

                if (selectedBlockIndex !== -1) {
                    memoryBlocks[selectedBlockIndex].processes.push(process);
                    memoryBlocks[selectedBlockIndex].remaining -= process.size;
                    assignedCount++;
                } else {
                    failedCount++;
                }

                renderMemory();
                const queueItems = document.querySelectorAll('.process-item');
                if(queueItems[i]) {
                    queueItems[i].style.opacity = '0.3';
                    queueItems[i].style.transform = 'scale(0.9)';
                    queueItems[i].style.filter = 'grayscale(100%)';
                }

                await new Promise(r => setTimeout(r, 600));
            }

            calculateStats(type, assignedCount, failedCount);
            document.getElementById('algoTitle').innerText = "FINALIZADO";
        }

        function calculateStats(type, assigned, failed) {
            let totalInternalFragmentation = 0;
            let totalMemory = 0;
            let usedMemory = 0;

            memoryBlocks.forEach(block => {
                totalMemory += block.size;
                if (block.processes.length > 0) {
                    totalInternalFragmentation += block.remaining;
                    usedMemory += (block.size - block.remaining);
                }
            });

            const efficiency = totalMemory > 0 ? ((usedMemory / totalMemory) * 100).toFixed(1) : 0;

            document.getElementById('results').className = 'results-panel visible';
            document.getElementById('resAlgo').innerText = type === 'best' ? "MEJOR AJUSTE" : "PEOR AJUSTE";
            document.getElementById('resAssigned').innerText = assigned;
            document.getElementById('resFailed').innerText = failed;
            document.getElementById('resFrag').innerText = totalInternalFragmentation;
            document.getElementById('resEff').innerText = efficiency + "%";
        }

        function hideResults() {
            document.getElementById('results').className = 'results-panel';
            document.getElementById('algoTitle').innerText = "LISTO";
        }

        renderMemory();
    </script>
</body>
</html>
